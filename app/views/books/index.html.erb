
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show",book_path(book.id) %></td>
      <td><%= link_to "Edit",edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy",book_path(book.id) %></td>
    </tr>

  <% end %>
  </tbody>
</table>

<h1>New book</h1>
<%= form_with model:Book.new do |f| %>
  <div class= "text-box">
    <h5>Title</h5>
    <%= f.text_field :title %>
  </div>
  <div class= "text-box">
    <h5>Body</h5>
    <%= f.text_area :body %>
  </div>
  <div class= "text-post">
    <%= f.submit 'Create Book'%>
  </div>
<% end %>

